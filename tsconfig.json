{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "baseUrl": "src",
    "paths": {
      "@domain/*":["domain/*"],
      "@data/*":["data/*"],
      "@presentation/*":["presentation/*"],
      "@validation/*":["validation/*"],
      "@infra/*":["domain/*"],
      "@main/*":["main/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
